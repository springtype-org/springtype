{
  "name": "springtype",
  "version": "3.0.0-alpha.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "JSX microframework",
  "scripts": {
    "clean": "npx st-rm-rf dist",
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.dist.json",
    "watch": "tsc -p tsconfig.dist.json -w",
    "postbuild": "npx st-cp package.json .npmignore README.md LICENSE dist",
    "pree2e": "ts-node ./scripts/e2e-build-all.ts",
    "e2e": "testcafe chrome:headless e2e/**/__e2e__/*",
    "test": "jest --verbose --watch",
    "test:ci": "jest --verbose --runInBand",
    "coverage": "jest --verbose --coverage",
    "coverage:ci": "jest --verbose --coverage --runInBand",
    "release": "yarn publish"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.6",
    "@types/node": "^13.13.2",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "testcafe": "^1.10.1",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
