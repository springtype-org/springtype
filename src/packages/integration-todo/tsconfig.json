{
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@springtype/*": ["./*"]
    },
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "strict": true,
    "noEmit": false,
    "rootDir": ".",
    "jsx": "react",
    "outDir": "dist",
    "jsxFactory": "ActiveRenderer.createElement",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    ".cache"
  ],
  "include": [
    "."
  ]
}