{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "noEmit": false,
    "rootDirs": [
      "src"
    ],
    "jsx": "react",
    "jsxFactory": "ActiveRenderer.createElement",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "downlevelIteration":true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "types": ["reflect-metadata", "node"]
  },
  "include": [
    "src", "test"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
